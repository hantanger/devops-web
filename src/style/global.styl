:root{
  --color-1 #000
  --color-2 #CE6D39
  --color-4 #FFEEE4

  --el-color-primary #F17F42
  --el-color-primary-light-3 #f28c56
  --el-color-primary-light-5 #e5976d
  --el-color-primary-light-7 #eab192
  --el-color-primary-light-8 #f4d0bd
  --el-color-primary-light-9 #f9e4d9
  --el-color-primary-dark-2 #de6625
}

// display相关
.block
  display: block
.flex
  display: flex
.flex-col
  flex-direction: column

// flex相关
.flex-1
  flex: 1 1 0%
  width 0
.flex-v-1
  flex: 1 1 0%
  height:  0
.items-center
  align-items: center
.items-stretch
  align-items: stretch
.justify-center
  justify-content: center
.justify-between
  justify-content: space-between

// 定位布局
.absolute
  position: absolute
.relative
  position: relative

// 浮动
.float-left
  float left
.float-right
  float right

// 盒子计算
.w-full
  width: 100%
.h-full
  height: 100%
.mx-auto
  margin-left: auto
  margin-right: auto
.m-20
  margin: 20px
.mb-5
  margin-bottom: 5px
.mb-10
  margin-bottom: 10px
.mb-20
  margin-bottom: 20px
.mt-10
  margin-top: 10px
.mt-20
  margin-top: 20px
.ml-5
  margin-left: 5px
.ml-10
  margin-left: 10px
.mr-5
  margin-right: 5px
.mr-10
  margin-right: 10px
.mr-50
  margin-right: 50px
.p-20
  padding 20px
.px-10
  padding-left: 10px
  padding-right: 10px
.px-20
  padding-left: 20px
  padding-right: 20px


// overflow
.overflow-auto
  overflow auto
.overflow-hidden
  overflow hidden
.overflow-x-hidden
  overflow-x hidden

// 圆角
.br-6
  border-radius: 6px

// 文字相关
.font-14
  font-size: 14px
.font-12
  font-size: 12px

.leading-8
  line-height: 8px

.color-primary
  color: var(--el-color-primary)
.color-success
  color: var(--el-color-success)
.color-danger
  color: var(--el-color-danger)
.color-warning
  color: var(--el-color-warning)
.color-text-regular
  color var(--el-text-color-regular)
.color-text-secondary
  color var(--el-text-color-secondary)

// 截断
.truncate
  overflow: hidden
  text-overflow: ellipsis
  white-space: nowrap

// 文字换行处理
.white-space-pre
  white-space: pre
.white-space-pre-wrap
  white-space: pre-wrap
.white-space-nowrap
  white-space: nowrap
.break-words
  overflow-wrap: break-word
.break-all
  word-break: break-all
.text-center
  text-align: center

// 背景相关
.bg-white
  background: white
.bg-black
  background: black

// 其他
.cursor-pointer
  cursor pointer